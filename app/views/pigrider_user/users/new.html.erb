<% provide(:webpageTitle, "Sign Up") %>

<% provide :webpageMetaTag do %>
  <meta name="keywords" content="PigRider User Sign Up" />
  <meta name="description" content="PigRider User Sign Up" />
<% end %>


<%= link_to "Already Have An Account", pigrider_user.signInUser_path %><br /><br /><br />

<h2>Sign up</h2>

<h3>Sign up is only open for PigRider developers.</h3>


<div>
  <%= form_for(:user, :url=>pigrider_user.createUser_path) do |f| %>
    Username: <%= f.text_field :username, :value=>@dUser.username %><br />
    Email: <%= f.text_field :email, :value=>@dUser.email %><br />
    Password: <%= f.password_field :password %><br />
    Password Confirmation: <%= f.password_field :password_confirmation %><br />

    <br />
    <br />
    <br />

    <p style="color:red">Please answer below two questions for registry:</p>
    <%= f.label :questionOne, "What's the most popular nickname for our cofounder Ming?" %>
    <%= f.password_field :questionOne %><br />
    <%= f.label :questionTwo, "What's the invitation code for PigRider employees to register in this website?" %>
    <%= f.password_field :questionTwo %><br /><br />
    <%= f.submit "Create my account" %><br />
  <% end %>
</div>


<br /><br /><br />
<div>
  <% if @dUser.errors.any? %>    
    <div class="ErrorReportContainer">
      <ul>
      <% @dUser.errors.each do |attr,msg| %>
        <% if msg=="doesn't match confirmation" %>
          <li>Password doesn't match confirmation</li>
        <% else %>
          <li><%= msg %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

